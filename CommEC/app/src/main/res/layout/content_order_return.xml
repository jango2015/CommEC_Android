<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/order_return_tv_tb_space"
        android:layout_marginTop="@dimen/order_return_tv_tb_space"
        android:text="@string/order_return_reason"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/color_9b9b9b"
        android:textSize="@dimen/order_return_et_size" />

    <EditText
        android:id="@+id/et_return_resaon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/order_return_et_lr_space"
        android:layout_marginRight="@dimen/order_return_et_lr_space"
        android:background="@mipmap/img_frame_returnproductreason" />
</LinearLayout>