<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_tab_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_babe"
        android:textColor="@color/color_a3a3a3"
        android:textSize="@dimen/search_txt_tab_sp"/>

    <ImageView
        android:id="@+id/iv_search_tab_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_orange_line"
        android:layout_marginTop="@dimen/search_tab_top_space"/>

</LinearLayout>