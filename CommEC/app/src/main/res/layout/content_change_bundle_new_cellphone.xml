<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_signup_account"
                android:layout_width="@dimen/signup_item_w"
                android:layout_height="wrap_content"
                android:background="@mipmap/img_square"
                android:layout_marginTop="@dimen/profile_change_bundle_cellphone2_et_top_space">

                <EditText
                    android:id="@+id/et_signup_account"
                    android:layout_width="@dimen/signup_et_w"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/signup_txt_left_space"
                    android:background="@null"
                    android:ems="10"
                    android:hint="@string/signup_enter_account"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/color_9b9b9b"
                    android:textSize="@dimen/signup_txt_sp"
                    android:inputType="phone"/>

                <ImageView
                    android:id="@+id/iv_account_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/signup_iv_check_right_space"
                    android:src="@mipmap/img_confirm"
                    android:visibility="visible"/>

            </RelativeLayout>

            <EditText
                android:id="@+id/et_enter_code"
                android:layout_width="@dimen/profile_change_bundle_cellphone_et_w"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/profile_change_bundle_cellphone_et_space"
                android:layout_marginTop="@dimen/profile_change_bundle_cellphone_et_space"
                android:background="@mipmap/img_square"
                android:ems="16"
                android:hint="@string/profile_change_bundle_cellphone_enter_code2"
                android:inputType="number"
                android:paddingLeft="@dimen/profile_change_bundle_cellphone1_enter_pwd_lr_space"
                android:paddingRight="@dimen/profile_change_bundle_cellphone1_enter_pwd_lr_space"
                android:textColor="@color/color_191919"
                android:textColorHint="@color/color_9b9b9b"
                android:textSize="@dimen/profile_change_bundle_cellphone_et_sp"/>

            <Button
                android:id="@+id/btn_send_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/btn_orange"
                android:text="@string/profile_change_bundle_cellphone_btn_submit_code"
                android:textColor="@android:color/white"
                android:textSize="@dimen/profile_change_bundle_cellphone_btn_sp"/>

            <TextView
                android:id="@+id/tv_countdown_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/profile_change_bundle_cellphone2_enter_code_countdown_bottom_space"
                android:layout_marginTop="@dimen/profile_change_bundle_cellphone2_enter_code_countdown_top_space"
                android:text="@string/profile_change_bundle_cellphone_countdown"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black"
                android:textSize="@dimen/profile_change_bundle_cellphone_countdown_sp"/>


        </LinearLayout>
    </ScrollView>
</LinearLayout>