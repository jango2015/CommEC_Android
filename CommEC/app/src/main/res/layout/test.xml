<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/signup_agree_h"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/ll_agree">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signup_cb_agree"
            android:background="@drawable/selector_cb_check"
            android:button="@android:color/transparent"
            android:layout_marginRight="@dimen/signup_cb_right_space"
            android:layout_gravity="center"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/signup_agree_h">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/signup_txt_agree"
                android:id="@+id/txt_signup_agree"
                android:textSize="@dimen/signup_txt_agree_sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/signup_txt_policy"
                android:id="@+id/txt_signup_policy"
                android:textSize="@dimen/signup_txt_agree_sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>