<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_send_company"
        android:layout_width="match_parent"
        android:layout_height="@dimen/order_send_et_h"
        android:layout_marginLeft="@dimen/order_send_et_lr_space"
        android:layout_marginRight="@dimen/order_send_et_lr_space"
        android:background="@null"
        android:drawableBottom="@drawable/custom_edittext"
        android:ems="11"
        android:hint="@string/order_send_require_company"
        android:inputType="phone"
        android:textColor="@android:color/black"
        android:textColorHint="@color/color_9b9b9b"
        android:textSize="@dimen/order_send_txt_size" />

    <EditText
        android:id="@+id/et_send_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/order_send_et_h"
        android:layout_marginLeft="@dimen/order_send_et_lr_space"
        android:layout_marginRight="@dimen/order_send_et_lr_space"
        android:background="@null"
        android:drawableBottom="@drawable/custom_edittext"
        android:ems="11"
        android:hint="@string/order_send_require_id"
        android:inputType="phone"
        android:textColor="@android:color/black"
        android:textColorHint="@color/color_9b9b9b"
        android:textSize="@dimen/order_send_txt_size" />


</LinearLayout>