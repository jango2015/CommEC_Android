<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_shop_detail_banner_bottom_h"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/search_babe_shows"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/color_191919"
                android:textSize="@dimen/search_shop_detail_order_sp"/>

            <Button
                android:id="@+id/btn_babe_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="@string/search_babe_shows_price"
                android:textColor="@color/color_ec6c00"
                android:textSize="@dimen/search_shop_detail_order_sp"/>

            <Button
                android:id="@+id/btn_babe_sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="@string/search_babe_shows_sales"
                android:textColor="@color/color_9b9b9b"
                android:textSize="@dimen/search_shop_detail_order_sp"/>
        </LinearLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_babe_category"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/search_shop_detail_category_h">

    </android.support.v4.view.ViewPager>

    <GridView
        android:id="@+id/gv_search_babe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_d8d8d8"/>

</LinearLayout>