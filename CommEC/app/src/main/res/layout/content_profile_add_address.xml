<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_d8d8d8"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_add_address_top_block_h"
        android:background="@android:color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_add_address_receiver"
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_add_address_item_h"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/profile_add_address_item_left_space"
                android:text="@string/profile_add_address_receiver"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/color_191919"
                android:textSize="@dimen/profile_add_address_txt_sp"/>

            <EditText
                android:id="@+id/tv_add_address_receiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/profile_add_address_item_right_space"
                android:background="@android:color/transparent"
                android:gravity="right"
                android:hint="@string/profile_edit_hint"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/color_9b9b9b"
                android:textColorHint="@color/color_9b9b9b"
                android:textSize="@dimen/profile_add_address_et_sp"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/img_line_1000"/>

        <RelativeLayout
            android:id="@+id/rl_add_address_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_add_address_item_h"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/profile_add_address_item_left_space"
                android:text="@string/profile_add_address_phone"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/color_191919"
                android:textSize="@dimen/profile_add_address_txt_sp"/>

            <EditText
                android:id="@+id/tv_add_address_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/profile_add_address_item_right_space"
                android:background="@android:color/transparent"
                android:gravity="right"
                android:hint="@string/profile_edit_hint"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/color_9b9b9b"
                android:textColorHint="@color/color_9b9b9b"
                android:textSize="@dimen/profile_add_address_et_sp"
                android:inputType="phone"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/img_line_1000"/>

        <RelativeLayout
            android:id="@+id/rl_add_address_area"
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_add_address_item_h"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/profile_add_address_item_left_space"
                android:text="@string/profile_add_address_area"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/color_191919"
                android:textSize="@dimen/profile_add_address_txt_sp"/>

            <TextView
                android:id="@+id/tv_add_address_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/profile_add_address_item_right_space"
                android:text="@string/profile_select_hint"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/color_9b9b9b"
                android:textSize="@dimen/profile_add_address_et_sp"/>

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/profile_add_address_item_arrow_right_space"
                android:background="@mipmap/bn_go_gray"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/img_line_1000"/>

        <RelativeLayout
            android:id="@+id/rl_add_address_street"
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_add_address_item_h"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/profile_add_address_item_left_space"
                android:text="@string/profile_add_address_street"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/color_191919"
                android:textSize="@dimen/profile_add_address_txt_sp"/>

            <EditText
                android:id="@+id/tv_add_address_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/profile_add_address_item_right_space"
                android:background="@android:color/transparent"
                android:gravity="right"
                android:hint="@string/profile_edit_hint"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/color_9b9b9b"
                android:textColorHint="@color/color_9b9b9b"
                android:textSize="@dimen/profile_add_address_et_sp"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_add_address_bottom_block_h"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/profile_add_address_block_space"
        android:layout_marginBottom="@dimen/profile_add_address_block_space">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_add_address_item_h"
            android:layout_marginLeft="@dimen/profile_add_address_item_left_space"
            android:layout_marginRight="@dimen/profile_add_address_item_right_space"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/profile_set_to_default"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/color_191919"
                android:textSize="@dimen/profile_add_address_txt_sp"/>

            <Switch
                android:id="@+id/switch_set_to_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_add_address_bottom_block_h"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/ll_del_address">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_add_address_item_h"
            android:layout_marginLeft="@dimen/profile_add_address_item_left_space"
            android:layout_marginRight="@dimen/profile_add_address_item_right_space"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/profile_delete_address"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/color_d0021b"
                android:textSize="@dimen/profile_add_address_txt_sp"/>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>