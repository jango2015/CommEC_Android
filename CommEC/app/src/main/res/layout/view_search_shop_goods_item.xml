<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/rectangle_77"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_search_shop_goods_photo"
            android:layout_width="@dimen/home_community_iv_photo_w"
            android:layout_height="@dimen/home_community_iv_photo_h"
            android:background="@color/color_e3e3e3"/>

        <TextView
            android:id="@+id/tv_search_shop_goods_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/search_shop_goods_item_lr_space"
            android:text="Goods name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_191919"
            android:textSize="@dimen/search_shop_goods_name_sp"
            android:layout_marginTop="@dimen/search_shop_goods_name_top_space"
            android:layout_marginBottom="@dimen/search_shop_goods_name_bottom_space"/>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/search_shop_goods_item_lr_space"
            android:paddingRight="@dimen/search_shop_goods_item_lr_space"
            android:layout_marginBottom="@dimen/search_shop_goods_price_bottom_space">

            <TextView
                android:id="@+id/tv_search_shop_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_shop_goods_price"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/color_ec6c00"
                android:textSize="@dimen/search_shop_goods_price_sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="false"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false"
                android:layout_alignParentRight="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/search_shop_goods_reserve_amount"
                    android:id="@+id/tv_search_shop_goods_reserve"
                    android:textSize="@dimen/search_shop_goods_info_sp"
                    android:textColor="@color/color_4a4a4a"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/search_shop_goods_sales_amount"
                    android:id="@+id/tv_search_shop_goods_sales"
                    android:textSize="@dimen/search_shop_goods_info_sp"
                    android:textColor="@color/color_4a4a4a"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
