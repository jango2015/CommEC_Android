<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_profile_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/img_navi_background"
        >

        <ImageButton
            android:id="@+id/ibtn_header_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/common_ddou_return_left_space"
            android:layout_marginTop="@dimen/common_ddou_return_top_space"
            android:background="@drawable/selector_btn_return_signin"
            android:contentDescription="return"/>

        <TextView
            android:id="@+id/tv_profile_header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:text="@string/profile_header_title"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textSize="@dimen/search_txt_header_title_sp"/>

        <ImageButton
            android:id="@+id/ibtn_header_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/home_txt_header_msg_right_space"
            android:background="@mipmap/navibtn_dots"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_profile_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/profile_photo_bottom_space"
        android:layout_marginTop="@dimen/profile_photo_top_space"
        android:paddingLeft="@dimen/profile_txt_left_space"
        android:paddingRight="@dimen/profile_txt_right_space">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/profile_photo"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_191919"/>

        <ImageView
            android:id="@+id/iv_profile_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/profile_photo_right_space"
            android:layout_toLeftOf="@+id/iv_profile_photo_go"
            android:background="@drawable/selector_btn_profile"/>

        <ImageView
            android:id="@+id/iv_profile_photo_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/bn_go_gray"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_line_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/img_line_1000"/>

    <RelativeLayout
        android:id="@+id/rl_profile_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_row_h"
        android:layout_marginBottom="@dimen/profile_row_bottom_space"
        android:layout_marginTop="@dimen/profile_row_top_space"
        android:paddingLeft="@dimen/profile_txt_left_space"
        android:paddingRight="@dimen/profile_txt_right_space">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/profile_id"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_191919"/>

        <TextView
            android:id="@+id/tv_profile_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/profile_gray_right_space"
            android:text="member ID"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_9b9b9b"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_line_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/img_line_1000"/>

    <RelativeLayout
        android:id="@+id/rl_profile_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_row_h"
        android:layout_marginBottom="@dimen/profile_row_bottom_space"
        android:layout_marginTop="@dimen/profile_row_top_space"
        android:paddingLeft="@dimen/profile_txt_left_space"
        android:paddingRight="@dimen/profile_txt_right_space">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/profile_name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_191919"/>

        <TextView
            android:id="@+id/tv_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/profile_gray_right_space"
            android:layout_toLeftOf="@+id/iv_profile_name_go"
            android:text="member name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_9b9b9b"/>

        <ImageView
            android:id="@+id/iv_profile_name_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/bn_go_gray"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_line_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/img_line_1000"/>

    <RelativeLayout
        android:id="@+id/rl_profile_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_row_h"
        android:layout_marginBottom="@dimen/profile_row_bottom_space"
        android:layout_marginTop="@dimen/profile_row_top_space"
        android:paddingLeft="@dimen/profile_txt_left_space"
        android:paddingRight="@dimen/profile_txt_right_space">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/profile_phone"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_191919"/>

        <TextView
            android:id="@+id/tv_profile_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/profile_gray_right_space"
            android:layout_toLeftOf="@+id/iv_profile_phone_go"
            android:text="member phone"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_9b9b9b"/>

        <ImageView
            android:id="@+id/iv_profile_phone_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/bn_go_gray"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_line_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/img_line_1000"/>

    <RelativeLayout
        android:id="@+id/rl_profile_cellphone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_row_h"
        android:layout_marginBottom="@dimen/profile_row_bottom_space"
        android:layout_marginTop="@dimen/profile_row_top_space"
        android:paddingLeft="@dimen/profile_txt_left_space"
        android:paddingRight="@dimen/profile_txt_right_space">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/profile_cellphone"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_191919"/>

        <TextView
            android:id="@+id/tv_profile_cellphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/profile_gray_right_space"
            android:layout_toLeftOf="@+id/iv_profile_cellphone_go"
            android:text="member cellphone"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_9b9b9b"/>

        <ImageView
            android:id="@+id/iv_profile_cellphone_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/bn_go_gray"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_line_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/img_line_1000"/>

    <RelativeLayout
        android:id="@+id/rl_profile_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_row_h"
        android:layout_marginBottom="@dimen/profile_row_bottom_space"
        android:layout_marginTop="@dimen/profile_row_top_space"
        android:paddingLeft="@dimen/profile_txt_left_space"
        android:paddingRight="@dimen/profile_txt_right_space">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/profile_address"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_191919"/>

        <ImageView
            android:id="@+id/iv_profile_address_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/bn_go_gray"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_line_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/img_line_1000"/>

    <RelativeLayout
        android:id="@+id/rl_profile_change_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_row_h"
        android:layout_marginBottom="@dimen/profile_row_bottom_space"
        android:layout_marginTop="@dimen/profile_row_top_space"
        android:paddingLeft="@dimen/profile_txt_left_space"
        android:paddingRight="@dimen/profile_txt_right_space">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/profile_change_pwd"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_191919"/>

        <ImageView
            android:id="@+id/iv_profile_change_pwd_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/bn_go_gray"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_line_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/img_line_1000"/>

    <Button
        android:id="@+id/btn_signout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_line_7"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/btn_orange"
        android:text="@string/profile_signout"
        android:textColor="@android:color/white"
        android:textSize="@dimen/signin_btn_sp"
        android:layout_marginTop="@dimen/profile_signout_top_space"/>

</LinearLayout>