<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/common_ddou_icon_bottom_space"
            android:text="@string/profile_change_bundle_cellphone_change_success"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"
            android:textSize="@dimen/profile_change_bundle_cellphone_btn_sp"/>

        <Button
            android:id="@+id/btn_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/profile_change_bundle_cellphone_et_space"
            android:background="@mipmap/btn_orange"
            android:text="@string/profile_change_bundle_cellphone_go_shopping"
            android:textColor="@android:color/white"
            android:textSize="@dimen/profile_change_bundle_cellphone_btn_sp"/>
    </LinearLayout>
</LinearLayout>