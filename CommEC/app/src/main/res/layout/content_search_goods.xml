<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_goods_photo"
                android:layout_width="@dimen/search_goods_detail_photo_wh"
                android:layout_height="@dimen/search_goods_detail_photo_wh"
                android:layout_marginTop="@dimen/search_goods_detail_photo_top_space"
                android:background="@color/color_d8d8d8"
                android:layout_marginBottom="@dimen/search_goods_detail_photo_bottom_space"/>

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goods"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/color_4a4a4a"
                android:textSize="@dimen/search_goods_detail_goods_name_sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/search_goods_detail_goods_price_bottom_space"
                android:layout_marginTop="@dimen/search_goods_detail_goods_price_top_space">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/search_goods_detail_goods_price_left_space"
                    android:text="@string/search_goods_detail_goods_price"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_ec6c00"
                    android:textSize="@dimen/search_goods_detail_goods_price_sp"/>

                <TextView
                    android:id="@+id/tv_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="Area"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_191919"
                    android:textSize="@dimen/search_goods_detail_goods_area_sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/search_goods_detail_goods_sales_right_space"
                    android:gravity="left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_sales"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/search_goods_detail_goods_sales"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/color_191919"
                        android:textSize="@dimen/search_goods_detail_goods_sales_sp"/>

                    <TextView
                        android:id="@+id/tv_reserve"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/search_goods_detail_goods_reserve"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/color_191919"
                        android:textSize="@dimen/search_goods_detail_goods_reserve_sp"/>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_F2F0F0"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/search_goods_detail_goods_item_tb_space"
                    android:paddingLeft="@dimen/search_goods_detail_goods_item_lr_space"
                    android:paddingRight="@dimen/search_goods_detail_goods_item_lr_space"
                    android:paddingTop="@dimen/search_goods_detail_goods_item_tb_space">

                    <TextView
                        android:id="@+id/textView33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/search_goods_detail_goods_select_category"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_4a4a4a"
                        android:textSize="@dimen/search_goods_detail_goods_info_sp"/>

                    <ImageButton
                        android:id="@+id/ibtn_go_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/bn_go_gray"/>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/img_line_1000"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/search_goods_detail_goods_item_tb_space"
                    android:paddingLeft="@dimen/search_goods_detail_goods_item_lr_space"
                    android:paddingRight="@dimen/search_goods_detail_goods_item_lr_space"
                    android:paddingTop="@dimen/search_goods_detail_goods_item_tb_space">

                    <TextView
                        android:id="@+id/tv_shop_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/search_goods_detail_goods_shop_name"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_4a4a4a"
                        android:textSize="@dimen/search_goods_detail_goods_info_sp"/>

                    <ImageButton
                        android:id="@+id/ibtn_go_shop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/bn_go_gray"/>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/img_line_1000"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/search_goods_detail_goods_item_tb_space"
                    android:paddingLeft="@dimen/search_goods_detail_goods_item_lr_space"
                    android:paddingRight="@dimen/search_goods_detail_goods_item_lr_space"
                    android:paddingTop="@dimen/search_goods_detail_goods_item_tb_space">

                    <TextView
                        android:id="@+id/tv_goods_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/search_goods_detail_goods_goods_info"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color_4a4a4a"
                        android:textSize="@dimen/search_goods_detail_goods_info_sp"/>

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>